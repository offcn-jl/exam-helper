/* 封面背景图 */
.bgOuter {
  display: flex;
  justify-content: center;
  height: 100vh;
  width: 100vw;
  background-size: 100vw 100vh;
}

/* 页面主按钮 */
.loginBtn {
  width: 285rpx;
  height: 100rpx;
  line-height: 70rpx;
  top: 85vh;
  background-color: #0a0063;
  color: #fff;
  font-weight: 900;
}

/* 水平居中 */
.horizontally {
  display: flex;
  justify-content: center;
}

/* 次级提示性文字 */
.times {
  display: block;
  text-align: center;
  color: #ccc;
}

/* 保存按钮 */
.saveBtn {
  position: fixed;
  top: 85vh;
  width: 75%;
  border-radius: 60rpx;
  padding: 10rpx 20rpx;
  background-color: #1996d6;
  color: #fff;
}