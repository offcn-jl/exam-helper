/* pages/photo-processing/index.wxss */

/* 封面背景图 */
.bgOuter {
  display: flex;
  justify-content: center;
  height: 100vh;
  width: 100vw;
  background-size: 100vw 100vh;
}

/* 页面主按钮 */
.loginBtn {
  width: 285rpx;
  height: 100rpx;
  line-height: 100rpx;
  top: 85vh;
  background-color: #0a0063;
  color: #fff;
  font-weight: 900;
}

/* 水平居中 */
.horizontally {
  display: flex;
  justify-content: center;
}

/* 次级提示性文字 */
.times {
  display: block;
  text-align: center;
  color: #ccc;
}

/* 保存按钮 */
.saveBtn {
  position: fixed;
  top: 85vh;
  width: 75%;
  border-radius: 60rpx;
  padding: 10rpx 20rpx;
  background-color: #1996d6;
  color: #fff;
}

.login-tips {
  position: absolute;
  background: rgba(0,0,0,0.5);
  color: white;
  text-align: center;
  border-radius: 5px;
  font-size: 28rpx;
  padding: 10rpx 15rpx;
  top: 75vh;
}

.loginSuffix{
  position: absolute;
  top: 94.5vh;
  color: #ccc;
}

/* step1 */
.sampleTitle {
  display: block;
  margin: 0 0 20rpx 0;
  text-align: center;
  color: #f4676f;
  font-weight: bold;
  font-size: 32px;
}

.sampleImage {
  width: 400rpx;
  height: 558rpx;
}

.sampleBtn {
  margin-top: 30rpx;
  width: 285rpx;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #f4676f;
  color: #fff;
  font-size: 38rpx;
  font-weight: 900;
  vertical-align: middle;
}

.tips {
  display: flex;
  justify-content: center;
  margin: 40rpx 0 0 0;
  padding: 0 20rpx;
}

.usedTimes{
  color: #f4676f;
  font-weight: bold;
  margin-top: 10rpx;
}

/* cropper */
.upload,
.getCropperImage {
  text-align: center;
  font-size: 20px;
  padding: 10rpx 0;
}

.cropper-buttons {
  display: flex;
  justify-content: space-around;
}

.beautyCheckOuter {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}

.dropImg {
  margin: 0 0 15rpx 0;
  width: 190rpx;
  height: 165rpx;
}

.dropImgOuter {
  margin-top: 4vh;
  text-align: center;
}

/* step3 */
.sampleOuter3 {
  display: flex;
  justify-content: center;
  padding-top: 45px;
}

.bgOuter3 {
  height: 100vh;
  width: 100vw;
  background-size: 100vw 100vh;
  z-index: -2;
}

.bgOuter3:after {
  content: "";
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  background: inherit;
  filter: blur(5px);
  z-index: -1;
}

.radio-group {
  margin: 30rpx 0 20rpx 30rpx;
}

.radio {
  margin-right: 10rpx;
}