/* pages/photo-processing/index.wxss */

@import "../../style/photo-processing.wxss";

/* step1 */
.sampleTitle {
  display: block;
  margin: 20rpx 0;
  text-align: center;
  color: #f4676f;
  font-weight: bold;
  font-size: 32px;
}

.sampleImage {
  width: 400rpx;
  height: 558rpx;
}

.sampleBtn {
  margin-top: 40rpx;
  width: 285rpx;
  height: 100rpx;
  line-height: 70rpx;
  background-color: #f4676f;
  color: #fff;
  font-size: 38rpx;
  font-weight: 900;
  vertical-align: middle;
}

.tips {
  display: flex;
  justify-content: center;
  margin: 40rpx 0 0 0;
  padding: 0 20rpx;
}

/* cropper */
.upload,
.getCropperImage {
  text-align: center;
  font-size: 20px;
  padding: 10rpx 0;
}

.cropper-buttons {
  display: flex;
  justify-content: space-around;
}

.beautyCheckOuter {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}

.dropImg {
  margin: 20rpx 0 15rpx 0;
  width: 190rpx;
  height: 165rpx;
}

.dropImgOuter {
  margin-top: 5vh;
  text-align: center;
}

/* step3 */
.sampleOuter3 {
  display: flex;
  justify-content: center;
  padding-top: 45px;
}

.bgOuter3 {
  height: 100vh;
  width: 100vw;
  background-size: 100vw 100vh;
  z-index: -2;
}

.bgOuter3:after {
  content: "";
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  background: inherit;
  filter: blur(5px);
  z-index: -1;
}

.radio-group {
  margin: 30rpx 0 20rpx 30rpx;
}

.radio {
  margin-right: 10rpx;
}