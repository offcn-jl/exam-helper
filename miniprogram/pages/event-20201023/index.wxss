/* pages/event-20201023/index.wxss */
.banner {
  width: 100vw;
}

.single-page {
  color: red;
  text-align: center;
  display: block;
  margin: 2vh auto;
  font-weight: 900;
  font-size: large;
}

.tools {
  width: 95vw;
  margin: 0 auto;
}

.tools .tool {
  display: inline-block;
  margin-top: 0.2vh;
  /* 移除按钮默认样式 */
  padding: 0;
  line-height: 0;
  background: none;
}

.tools .tool::after {
  /* 移除按钮默认样式 */
  border: none;
}

.tools .tool:nth-child(odd) {
  margin-right: 2vw;
}

.tools .tool image {
  width: 46.5vw;
  border-radius: 20rpx;
  box-shadow: 0px 0px 12rpx rgba(0, 0, 0, 0.1);
}

.suffix {
  opacity: 0.9;
  margin-left: 43vw;
  font-size: 14px;
}
