/* pages/event-20201013/index.wxss */
.banner {
  width: 100vw;
}

.single-page {
  color: red;
  text-align: center;
  display: block;
  margin: 2vh auto;
  font-weight: 900;
  font-size: large;
}

.tools {
  width: 95vw;
  margin: 0 auto;
}

.tools {
  width: 95vw;
  margin: 0 auto;
}

.tools .tool {
  display: inline-block;
}

.tools .tool:nth-child(odd) {
  margin-right: 2vw;
}

.tools .tool image {
  width: 46.5vw;
  border-radius: 20rpx;
  box-shadow: 0px 0px 12rpx rgba(0, 0, 0, 0.1);
}

.occ-list {
  width: 95vw;
  border-radius: 20rpx;
  background: #fff;
  -moz-box-shadow: 0px 0px 12rpx rgba(0, 0, 0, 0.1);
  -webkit-box-shadow: 0px 0px 12rpx rgba(0, 0, 0, 0.1);
  box-shadow: 0px 0px 12rpx rgba(0, 0, 0, 0.1);
  margin: 0 auto;
  margin-bottom: 35rpx;
}

.occ-list-title {
  width: 630rpx;
  margin: 0 auto;
  border-bottom: 1px solid #e0dfe2;
}

.occ-list-title image {
  display: inline-block;
  padding: 17rpx 0 11rpx;
  width: 162rpx;
  height: 30rpx;
}

.occ-list-content {
  width: 626rpx;
  margin: 0 auto;
  padding-bottom: 30rpx;
}

.occ-list-item {
  width: 626rpx;
  height: 32rpx;
  display: flex;
  justify-content: space-between;
  line-height: 32rpx;
  margin-top: 25rpx;
  overflow: hidden;
}

.occ-list-item-play {
  display: block;
  width: 30rpx;
  height: 30rpx;
  position: relative;
  top: 2rpx;
}

.occ-list-item-title {
  display: block;
  width: 345rpx;
  height: 32rpx;
  line-height: 32rpx;
  color: #333333;
  font-size: 26rpx;
  padding: 0 10rpx;
  border-right: 1px solid #d6d6d6;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.occ-list-item-time {
  display: block;
  width: 135rpx;
  height: 32rpx;
  line-height: 32rpx;
  color: #666666;
  font-size: 26rpx;
  padding: 0 10rpx;
}

.occ-list-item-btn {
  width: 74rpx;
  height: 29rpx;
  padding: 2rpx 0 1rpx;
}